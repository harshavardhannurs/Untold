<%- include('partials/header') %>

<a href="/" class="text-warning ms-1 mb-3 brand-top">Untold</a>
<div class="d-flex flex-column justify-content-center align-items-center signup-field">
  <div class="card">
    <div class="card-header">
      <h5>Sign in</h5>
    </div>
    <div class="card-body">
      <form action="/signin" method="POST">
        <div class="form-group">
          <label>Email</label>
          <input type="email" id="emailSignin" class="form-control" placeholder="Enter email" name="username">
        </div>
        <div class="form-group password-field">
          <label>Password</label>
          <input type="password" id="passwordSignin" class="form-control" placeholder="Enter password" name="password">
          <input type="checkbox" id="showPassIn" onclick="handleClickIn()">
          <span style="font-size:0.9rem">Show password</span>
        </div>
        <button type="submit" class="btn btn-sm btn-warning rounded mb-2">Sign in</button>
        <br>
        <small>If you don't have an account <a href="/signup" class="signup-alert">Sign up</a> first.</small>
      </form>
    </div>
  </div>
  <div class="or-class" style="margin-bottom:0;">
    <hr>
    <h6 class="or-element">Or</h6>
  </div>
  <div class="login-google">
    <a href="/auth/google" class="btn btn-primary btn-md rounded"><span><i class="fa-brands fas fa-google"></i></span> Sign in with Google</a>
  </div>
  <div class="login-github">
    <a href="/auth/github" class="btn btn-dark btn-md rounded"><span class="git-logo"><i class="fa-brands fa-github"></i></span> Sign in with GitHub</a>
  </div>
</div>

<%- include('partials/footer') %>
