<%- include('partials/header') %>

<a href="/" class="text-warning ms-1 mb-3 brand-top">Untold</a>
<div class="d-flex flex-column justify-content-center align-items-center signup-field">
  <div class="card">
    <div class="card-header">
      <h5>Register</h5>
    </div>
    <div class="card-body">
      <form action="/signup" method="POST" id="sign-up-form">
        <div class="form-group">
          <label>Email</label>
          <input type="email" onfocus="handleFocus()" id="emailSignup" class="form-control" placeholder="Enter email" name="username">
        </div>
        <div class="form-group password-field">
          <label>Password</label>
          <input type="password" id="passwordSignup" class="form-control" placeholder="Enter password" name="password">
          <input type="checkbox" id="showPassUp" onclick="handleClickUp()">
          <span style="font-size:0.9rem">Show password</span>
          <% if(message){%>
            <p id="is-pass-valid" class="isvalid mt-2"><i class="fa-solid fa-xmark" id="xmark"></i><%=message%></p>
          <% }%>
        </div>
        <button type="submit" id="register-btn" class="btn btn-sm btn-warning rounded mb-2">Register</button>
        <br>
        <small>If you already have an account <a href="/signin" class="signin-alert">Sign in</a></small>
      </form>
    </div>
  </div>
  <div class="or-class" style="margin-bottom:0;">
    <hr>
    <h6 class="or-element">Or</h6>
  </div>
  <div class="login-google">
    <a href="/auth/google" class="btn btn-primary btn-md rounded"><span class="google-logo"><i class="fa-brands fas fa-google"></i></span> Sign up with Google</a>
  </div>
  <div class="login-github">
    <a href="/auth/github" class="btn btn-dark btn-md rounded"><i class="fa-brands fa-github"></i> Sign up with GitHub</a>
  </div>
</div>

<%- include("partials/footer") %>
